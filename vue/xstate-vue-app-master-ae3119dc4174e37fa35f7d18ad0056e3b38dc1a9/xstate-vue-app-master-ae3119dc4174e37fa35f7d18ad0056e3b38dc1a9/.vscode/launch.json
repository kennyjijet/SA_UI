    "version": "0.2.0",
    "configurations": [
        {
            "name": "just new",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/just-task/bin/just.js",
            "stopOnEntry": false,
            "args": [
                "new",
                "--index=02"
                //"build",
                //"version",
            ],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "internalConsole",
            "sourceMaps": false,
            "outFiles": [
                "${workspaceRoot}/build"
            ]
        }        
    ]
